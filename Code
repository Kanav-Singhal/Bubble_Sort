def bubble_sort(arr):
    n = len(arr)
    for i in range(n-1):
        for j in range(0,n-i-1):
            if arr [j] > arr[j+1]:
                arr [j], arr [j+1] = arr [j+1], arr [j]

arr = [37,11,19,17,13,29,47]
bubble_sort(arr)
print("Sorted array is:")

for i in range(len(arr)):
    print("%d"%arr[i])
